@model Category

<form method="post">
    @* <input asp-for="Id" hidden /> if Record is added instead of update*@
    <div class="border border-2 p-3 mt-4">
        <div class="row pb-0">
            <h2 class="text-primary">
                Delete Category
            </h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border border-2 form-control">Back To List</a>
            </div>
        </div>
    </div>
</form>
