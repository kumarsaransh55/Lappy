@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LappyTech Procurement</title>

    <!-- Professional Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="//cdn.datatables.net/2.3.4/css/dataTables.dataTables.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LappyBag.styles.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }

        .navbar-brand {
            letter-spacing: 1px;
        }

        .nav-link {
            font-weight: 500;
            transition: color 0.3s ease;
        }

            .nav-link:hover {
                color: #2aa198 !important;
            }
        /* Teal hover color */
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom shadow-sm mb-3 py-2">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-laptop text-info me-2" style="font-size: 1.6rem;"></i>
                    <span class="fw-bold">LAPPY<span class="text-info">TECH</span></span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        <!-- 2. Home Link -->
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i> Home
                            </a>
                        </li>

                        <!-- 3. Orders Link -->
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Order" asp-action="index">
                                <i class="bi bi-list-check me-1"></i> Orders
                            </a>
                        </li>

                        <!-- 4. Admin Dropdown -->
                        @if (User.IsInRole(SD.Role_Admin))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-gear me-1"></i> Management
                                </a>
                                <ul class="dropdown-menu shadow border-0 mt-2">
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Index">Category</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="Index">Product</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Company" asp-action="Index">Company</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Create User</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- 5. Right Aligned Items -->
                    <div class="d-flex align-items-center">
                        <ul class="navbar-nav">
                            <li class="nav-item me-3">
                                <a class="nav-link position-relative" asp-area="Customer" asp-controller="Cart" asp-action="index">
                                    <span id="cart-container">
                                        @await Component.InvokeAsync("ShoppingCart")
                                    </span>
                                </a>
                            </li>
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mb-5">
        <main role="main" class="pb-3">
            <partial name="/Areas/Admin/Views/Shared/_Notification.cshtml" />
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-primary text-light mt-auto border-top border-info border-opacity-25">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-4 text-center text-md-start">
                    <p class="m-0 lh-1">
                        <span class="fw-bold small">LAPPY<span class="text-info">TECH</span></span>
                        <span class="small text-white-50 ms-1 d-none d-xl-inline">| Enterprise IT Procurement</span>
                    </p>
                </div>

                <div class="col-md-4 text-center">
                    <small style="font-size: 0.75rem;">Made with <i class="bi bi-heart-fill text-danger"></i> by <strong>Saransh</strong></small>
                </div>

                <div class="col-md-4 text-center text-md-end">
                    <a href="https://www.linkedin.com/in/saranshkumar55/"
                       target="_blank"
                       class="text-light ms-3 social-link text-decoration-none"
                       title="Connect with Saransh on LinkedIn">
                        <i class="bi bi-linkedin" style="font-size: 1.2rem;"></i>
                    </a>

                    <a href="https://github.com/kumarsaransh55"
                       target="_blank"
                       class="text-light ms-3 social-link"
                       title="View Source Code on GitHub">
                        <i class="bi bi-github" style="font-size: 1.2rem;"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.datatables.net/2.3.4/js/dataTables.min.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.tiny.cloud/1/zunqxq50g9yglh169nzp7v5r42iss1cmo0aqr3mbssvzeckq/tinymce/8/tinymce.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
