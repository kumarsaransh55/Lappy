@model List<OrderVM>
@{
	var status = ViewBag.status;
}
<div class="container">
    <div class="row pt-3 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Order List
            </h2>
        </div>
    </div>
    <div class="d-flex justify-content-between pb-5 pt-2">
        <span></span>
        <ul class="list-group list-group-horizontal-sm">
            <a class="list-group-item list-group-item-action text-nowrap @((status=="inprocess") ? "active" : "" ) " asp-controller="Order" asp-action="index" asp-route-status="inprocess">
                In Process
            </a>
            <a class="list-group-item list-group-item-action @((status == "pending") ? "active" : "")  " asp-controller="Order" asp-action="index" asp-route-status="pending">
                Pending
            </a>
            <a class="list-group-item list-group-item-action @((status == "completed") ? "active" : "")  " asp-controller="Order" asp-action="index" asp-route-status="completed">
                Completed
            </a>
            <a class="list-group-item list-group-item-action @((status == "approved") ? "active" : "")  " asp-controller="Order" asp-action="index" asp-route-status="approved">
                Approved
            </a>
            <a class="list-group-item list-group-item-action @((status == "all") ? "active" : "")  " asp-controller="Order" asp-action="index" asp-route-status="all">
                All
            </a>
    </ul>
    </div>
    <table id="tblData" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Phone Number
                </th>
                <th>
                    Email
                </th>
                <th>
                    Status
                </th>
                <th>
                    Total
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>

    </table>
</div>


<script>
    var status = "@ViewBag.status";
</script>

@section Scripts {
    <script src="~/js/order.js"></script>
}