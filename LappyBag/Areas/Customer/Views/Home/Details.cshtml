@model Product

<a asp-action="Index" class="btn btn-outline-primary text-uppercase p-2 mb-3">Back to Homepage</a>

<div class="row g-4 align-items-start">
    <!-- Image -->
    <div class="col-md-5 text-center">
        <img src="@Model.ImageUrl"
             alt="@Model.ModelName"
             class="img-fluid rounded shadow-sm"
             style="max-height:550px; object-fit:contain;" />

        <div class="d-flex justify-content-center mt-3">
            <form action="/" method="post" class="text-center" style="max-width: 300px; width: 100%;">
                <div class="input-group mb-3 border border-secondary shadow-sm">
                    <span class="input-group-text fw-semibold bg-white">Count</span>
                    <input type="number" class="form-control text-center bg-gradient bg-primary-subtle text-primary" name="quantity" value="1" />
                </div>
                <button type="submit" class="btn btn-primary w-75" name="addtoCart">Add to Cart</button>
            </form>
        </div>
    </div>
     
    <!-- Product Details -->
    <div class="col-md-7">
        <div class="card  shadow-sm border-0">
            <div class="card-body">
                <!-- Title -->
                <h3 class="fw-bold mb-3">@Model.Brand @Model.ModelName</h3>

                <!-- Prices -->
                <div class="mb-4">
                    <h4 class="fw-semibold mb-1 text-dark">₹ @Model.ListPrice</h4>
                    <small class="text-secondary d-block mb-2">Price for 1 unit</small>

                    <div class="row text-dark">
                        <div class="col-4">
                            <div>Price for 10–25 units</div>
                            <strong class="text-primary">₹ @Model.ListPrice10</strong>
                        </div>
                        <div class="col-4">
                            <div>Price for 25–50 units</div>
                            <strong class="text-primary">₹ @Model.ListPrice25</strong>
                        </div>
                        <div class="col-4">
                            <div>Price for &gt;100 units</div>
                            <strong class="text-primary">₹ @Model.ListPrice100</strong>
                        </div>
                    </div>
                </div>

                <!-- Specifications -->
                <h5 class="fw-semibold mb-2">Specifications</h5>
                <div class="row">
                    <div class="col-sm-6">
                        <ul class="list-unstyled mb-0">
                            <li><strong>Brand:</strong> @Model.Brand</li>
                            <li class="mt-2"><strong>Model Name:</strong> @Model.ModelName</li>
                            <li class="mt-2"><strong>Screen Size:</strong> @Model.ScreenSize</li>
                            <li class="mt-2"><strong>Colour:</strong> @Model.Colour</li>
                            <li class="mt-2"><strong>Hard Disk Size:</strong> @Model.HardDiskSize</li>
                        </ul>
                    </div>

                    <div class="col-sm-6">
                        <ul class="list-unstyled mb-0">
                            <li><strong>CPU Model:</strong> @Model.CpuModel</li>
                            <li class="mt-2"><strong>RAM Memory Size:</strong> @Model.RamMemory</li>
                            <li class="mt-2"><strong>Operating System:</strong> @Model.OS</li>
                            <li class="mt-2"><strong>Graphics Card:</strong> @Model.GraphicsCard</li>
                            <li class="mt-2"><strong>Special Features:</strong> @Model.SpecialFeatures</li>
                        </ul>
                    </div>
                </div>

                <!-- Description -->
                <div class="mt-4">
                    <h5 class="fw-semibold mb-2">Description</h5>
                    <div>
                        @Html.Raw(Model.Description)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
