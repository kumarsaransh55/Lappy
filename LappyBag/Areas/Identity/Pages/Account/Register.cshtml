@page
@using Lappy.Utility
@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-4 p-4">
        <div class="row">
            <div class="col-md-12 text-center">
                @if (User.IsInRole(SD.Role_Admin))
                {
                    <h2 class="py-2 text-white">Register - Admin Portal</h2>
                }
                else
                {
                    <h2 class="py-2 text-white">Register</h2>
                }
            </div>
    </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-2">
        <div class="col-md-12">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="row">
                <h3 class="pb-3 mb-3 text-secondary text-center">Create a new account.</h3>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3 col-md-12">
                    <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                 <div class="form-floating mb-3 col-md-6">
                    <input asp-for="Input.Name" class="form-control" autocomplete="name" aria-required="true" placeholder=" " />
                    <label asp-for="Input.Name">Full Name</label>
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                 <div class="form-floating mb-3 col-md-6">
                    <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="phone" aria-required="true" placeholder=" " />
                    <label asp-for="Input.PhoneNumber">Phone Number</label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                 <div class="form-floating mb-3 col-md-6">
                    <input asp-for="Input.StreetAddress" class="form-control" autocomplete="address" aria-required="true" placeholder=" " />
                    <label asp-for="Input.StreetAddress">Street Address</label>
                    <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                </div>
                 <div class="form-floating mb-3 col-md-6">
                    <input asp-for="Input.City" class="form-control" autocomplete="city" aria-required="true" placeholder=" " />
                    <label asp-for="Input.City">City</label>
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>
                 <div class="form-floating mb-3 col-md-6">
                    <input asp-for="Input.State" class="form-control" autocomplete="state" aria-required="true" placeholder=" " />
                    <label asp-for="Input.State">State</label>
                    <span asp-validation-for="Input.State" class="text-danger"></span>
                </div>
                 <div class="form-floating mb-3 col-md-6">
                    <input asp-for="Input.PinCode" class="form-control" autocomplete="pincode" aria-required="true" placeholder=" " />
                    <label asp-for="Input.PinCode">Pincode</label>
                    <span asp-validation-for="Input.PinCode" class="text-danger"></span>
                </div>
                @if(User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee)){
                <div class="form-floating mb-3 col-md-6">
                    <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select pt-2">
                        <option disabled selected>
                            Select a role
                        </option>
                    </select>
                </div>
                    <div class="form-floating mb-3 col-md-6">
                        <select asp-for="Input.CompanyId"  asp-items="@Model.Input.CompanyList" class="form-select pt-2">
                            <option disabled selected>
                                Select a Company
                            </option>
                        </select>
                        <span asp-validation-for="Input.CompanyId" class="text-danger"></span>
                    </div>
                }
                <div class="col-md-12 text-center">
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-primary ">Register</button>
                </div>
            </form>
        </div>
    @if(!(User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Employee))){
    <div class="col-md-12 col-md-offset-2">
        <section>
            <p class="divider-text d-flex pt-3"> OR</p>
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article
                            about setting up this ASP.NET application to support logging in via external services</a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p class="d-flex justify-content-center">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
    }
</div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function(){
            
            $('#Input_Role').change(function(){
                var selection = $('#Input_Role option:selected').text();
                if(selection == "Company"){
                    $('#Input_CompanyId').show();
                }else{
                    $('#Input_CompanyId').hide();
                    $('#Input_CompanyId').prop('selectedIndex', 0);
                     $('span[data-valmsg-for="Input.CompanyId"]').text('');
                }
            });

            $('#Input_CompanyId').change(function(){
                var companyValue = $(this).val();
                var selection = $('#Input_Role option:selected').text();
                if(selection == "Company" && companyValue != ""){
                    $('span[data-valmsg-for="Input.CompanyId"]').text('');
                }
            })
        })
    </script>
}
